<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="itemMainPane" prefHeight="50.0" prefWidth="700.0" style="-fx-background-radius: 12;" styleClass="bg-item" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ItemStdExamController">
   <left>
      <Pane prefHeight="50.0" prefWidth="594.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblCourseName" layoutX="23.0" layoutY="9.0" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 8; -fx-alignment: center;" styleClass="bg-blue" stylesheets="@styles.css" text="Course" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ImageView fx:id="imgCourseSubject" fitHeight="30.0" fitWidth="30.0" layoutX="140.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/math.png" />
               </image>
            </ImageView>
            <Label fx:id="lblExamTitle" layoutX="182.0" layoutY="16.0" text="Exam Title" textFill="#3c3c64" />
         </children>
      </Pane>
   </left>
   <center>
      <Pane prefHeight="50.0" prefWidth="80.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblFinished" layoutX="22.0" layoutY="12.0" prefHeight="27.0" prefWidth="68.0" styleClass="color-green" text="Done" textFill="#3c3c64">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Button fx:id="btnStartExam" layoutX="8.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnStartExamClicked" prefHeight="30.0" prefWidth="76.0" styleClass="btn-inner" text="Start Exam" />
         </children>
      </Pane>
   </center>
</BorderPane>
