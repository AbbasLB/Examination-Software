<Pane fx:id="pnlCourses" prefHeight="600.0" prefWidth="790.0" styleClass="bg-inside" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CoursesController">
   <children>
      <Label layoutX="45.0" layoutY="32.0" text="My Courses" textFill="#3c3c64">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="65.0" layoutY="67.0" prefHeight="92.0" prefWidth="661.0" spacing="100.0">
         <children>
            <VBox fx:id="boxInfo1" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="10" textFill="#3c3c64">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Label>
                  <Label text="Courses" textFill="#3c3c64" />
               </children>
            </VBox>
            <VBox fx:id="boxInfo2" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="60" textFill="#3c3c64">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Label>
                  <Label text="Credits" textFill="#3c3c64" />
               </children>
            </VBox>
            <VBox fx:id="boxInfo3" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="100" textFill="#3c3c64">
